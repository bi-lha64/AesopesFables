<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <Button
                android:id="@+id/btnFable1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:text="FABLE1"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnFable2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnFable10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="FABLE10"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>



</android.support.design.widget.CoordinatorLayout>